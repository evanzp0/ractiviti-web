{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "noImplicitReturns": true,
        "outDir": "target/debug/js",
    },
    "include": [
        "web/modules/**/*.ts",
        "web/modules/**/*.tsx", 
        "web/common/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}